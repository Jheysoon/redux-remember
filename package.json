{
  "name": "redux-remember",
  "version": "4.0.4",
  "description": "Saves and loads your redux state from a key-value store of your choice",
  "author": "Iskren Slavov <iskren.s@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "unpkg": "dist/redux-remember.js",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "umd": "./dist/redux-remember.js",
      "require": "./lib/index.js",
      "import": "./es/index.js",
      "default": "./lib/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf -V es lib dist",
    "typecheck": "tsc --noEmit",
    "build:umd": "rollup -c ./rollup.config.mjs",
    "build:lib": "node ./babel-build.mjs lib",
    "build:es": "node ./babel-build.mjs es",
    "build:types": "tsc --pretty --declaration --declarationMap --emitDeclarationOnly --outDir types",
    "build": "npm run build:lib && npm run build:es && npm run build:umd && npm run build:types",
    "prepare": "npm run clean && npm run typecheck && npm run test && npm run build",
    "lint": "eslint ./src/*.ts",
    "test": "npm run lint && jest ./src/__tests__/*.test.ts"
  },
  "jest": {
    "collectCoverage": true,
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": ["ts-jest", {
        "useESM": true,
        "extensionsToTreatAsEsm": [
          ".js",
          ".ts"
        ]
      }]
    }
  },
  "files": [
    "src",
    "dist",
    "es",
    "lib",
    "types",
    "LICENSE",
    "README.md",
    "!**/__tests__"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zewish/redux-remember.git"
  },
  "bugs": {
    "url": "https://github.com/zewish/redux-remember/issues"
  },
  "homepage": "https://github.com/zewish/redux-remember/",
  "keywords": [
    "redux",
    "remember",
    "storage",
    "persist",
    "persistance",
    "rehydrate",
    "rehydration",
    "localstorage",
    "sessionstorage",
    "asyncstorage",
    "react",
    "react-native"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.15",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@types/jest": "^29.5.4",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "babel-plugin-module-extension-resolver": "^1.0.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.4",
    "jest": "^29.6.4",
    "redux": "*",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.1",
    "rollup-plugin-ts": "^3.4.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "redux": "*"
  }
}
