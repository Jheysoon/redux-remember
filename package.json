{
  "name": "redux-remember",
  "version": "4.0.0",
  "description": "Saves and loads your redux state from a key-value store of your choice",
  "author": "Iskren Slavov <iskren.s@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "umd:main": "dist/redux-remember.js",
  "module": "es/index.js",
  "unpkg": "dist/redux-remember.js",
  "source": "src/index.ts",
  "typings": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js",
      "default": "./lib/index.js",
      "umd": "./dist/redux-remember.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf es lib dist 2> /dev/null",
    "typecheck": "tsc --noEmit",
    "build:umd": "rollup -c ./rollup.config.mjs",
    "build:lib": "cross-env BABEL_ENV=lib babel --extensions '.ts' src --source-maps --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel --extensions '.ts' src --source-maps --out-dir es",
    "build": "npm run build:lib && npm run build:es && npm run build:umd",
    "prepare": "npm run clean && npm run typecheck && npm run test && npm run build",
    "lint": "eslint ./src/*.ts",
    "test": "npm run lint && jest ./src/__tests__/*.test.ts"
  },
  "jest": {
    "collectCoverage": true,
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true,
          "extensionsToTreatAsEsm": [
            ".js",
            ".ts"
          ]
        }
      ]
    }
  },
  "files": [
    "src",
    "dist",
    "es",
    "lib",
    "index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zewish/redux-remember.git"
  },
  "bugs": {
    "url": "https://github.com/zewish/redux-remember/issues"
  },
  "homepage": "https://github.com/zewish/redux-remember/",
  "keywords": [
    "redux",
    "remember",
    "storage",
    "persist",
    "persistance",
    "rehydrate",
    "rehydration",
    "localstorage",
    "sessionstorage",
    "asyncstorage",
    "react",
    "react-native"
  ],
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.5",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "babel-plugin-module-extension-resolver": "^1.0.0",
    "cross-env": "^7.0.3",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "jest": "^29.6.2",
    "redux": "*",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.0",
    "rollup-plugin-ts": "^3.4.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "redux": "*"
  }
}
